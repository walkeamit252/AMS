<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tayler.ut.attendencemanagmentsystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".app.ApplicationContext"
        android:theme="@style/AppTheme">
        <activity android:name=".commonui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".commonui.activity.LoginOptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".student.activity.StudentLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".teacher.activity.TeacherLoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            />

        <activity
            android:name=".student.activity.StudentSignupActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".teacher.activity.TeacherSignupActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".student.activity.StudentMenuActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".teacher.activity.TeacherMenuActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>