<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tayler.ut.attendencemanagmentsystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".ApplicationContext"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.LoginOptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.student.StudentLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.teacher.TeacherLoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.student.StudentSignupActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.teacher.TeacherSignupActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".menu.StudentMenuActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".menu.TeacherMenuActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>